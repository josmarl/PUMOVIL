<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.Vistas.VMovil_Evento_Establec">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistema"
        android:id="@+id/VEI_TVWtitulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18dp"
        android:singleLine="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:id="@+id/VEI_BTNclient"
        android:layout_below="@+id/VEI_TVWtitulo"
        android:layout_centerHorizontal="true"
        style="@style/button_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe de Gastos"
        android:id="@+id/VEI_BTNinfgas"
        android:layout_below="@+id/VEI_BTNclient"
        android:layout_centerHorizontal="true"
        style="@style/button_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen"
        android:id="@+id/VEI_BTNresume"
        android:layout_below="@+id/VEI_BTNinfgas"
        android:layout_centerHorizontal="true"
        style="@style/button_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carga Inventario"
        android:id="@+id/VEI_BTNcarinv"
        android:layout_below="@+id/VEI_BTNresume"
        android:layout_centerHorizontal="true"
        style="@style/button_text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transferencia de Inventario"
        android:id="@+id/VEI_BTNtrainv"
        android:layout_below="@+id/VEI_BTNcarinv"
        android:layout_centerHorizontal="true"
        style="@style/button_text" />


</RelativeLayout>
