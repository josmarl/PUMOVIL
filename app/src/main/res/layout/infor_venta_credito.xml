<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:id="@+id/VVCR_numeroinf"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="numero" />

    <TextView
        android:id="@+id/VVCR_fechasinf"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="fecha"
        android:layout_toRightOf="@+id/VVCR_numeroinf"
        android:layout_toEndOf="@+id/VVCR_numeroinf" />

    <TextView
        android:id="@+id/VVCR_montosinf"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="precio"
        android:layout_toRightOf="@+id/VVCR_fechasinf" />
</RelativeLayout>