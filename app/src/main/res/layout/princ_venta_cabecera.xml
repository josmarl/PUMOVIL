<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.Vistas.VMovil_Venta_CabeceraX">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:padding="10dp"
        android:text="@string/VVC_titulo" android:textSize="20sp"
        android:id="@+id/VVC_titulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:id="@+id/VVC_BTNproducto"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/VVC_SPNforpag"
        android:layout_alignStart="@+id/VVC_SPNforpag" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VVC_SPNtipven"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/VVC_BTNproducto" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VVC_SPNtipcom"
        android:layout_below="@+id/VVC_LSTprosel"
        android:layout_alignRight="@+id/VVC_BTNprocesar"
        android:layout_alignEnd="@+id/VVC_BTNprocesar" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VVC_SPNforpag"
        android:layout_below="@+id/VVC_LSTprosel"
        android:layout_toEndOf="@+id/VVC_SPNtipcom"
        android:layout_alignLeft="@+id/VVC_BTNcancelar"
        android:layout_alignStart="@+id/VVC_BTNcancelar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +  -   Procesar   -  + "
        android:id="@+id/VVC_BTNprocesar"
        android:layout_below="@+id/VVC_SPNforpag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +  -   Cancelar   -  + "
        android:id="@+id/VVC_BTNcancelar"
        android:layout_below="@+id/VVC_SPNforpag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/VVC_LSTprosel"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/VVC_SPNtipven" />

</RelativeLayout>
