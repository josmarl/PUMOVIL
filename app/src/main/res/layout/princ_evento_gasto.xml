<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.Vistas.VMovil_Venta_CabeceraX">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:padding="10dp"
        android:text="@string/VEG_titulo" android:textSize="20sp"
        android:id="@+id/VEG_titulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recalcular"
        android:id="@+id/VEG_BTNrecalcuz"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/VEG_BTNcancelar"
        android:layout_alignStart="@+id/VEG_BTNcancelar" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VEG_SPNtipgas"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/VEG_BTNrecalcuz" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/VEG_SPNgasto"
        android:layout_below="@+id/VEG_LSTgassel"
        android:layout_alignRight="@+id/VEG_BTNcancelar"
        android:layout_alignEnd="@+id/VEG_BTNcancelar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +  -  Actualizar  -  + "
        android:id="@+id/VEG_BTNactualiz"
        android:layout_below="@+id/VEG_SPNgasto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" +  -   Cancelar   -  + "
        android:id="@+id/VEG_BTNcancelar"
        android:layout_below="@+id/VEG_SPNgasto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/VEG_LSTgassel"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/VEG_SPNtipgas" />

</RelativeLayout>
